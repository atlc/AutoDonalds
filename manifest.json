{
  "name": "AutoDonalds",
  "version": "1.0",
  "description": "Automating 5-star surveys for your good experiences",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": 
  {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.mcdvoice.com/*", "http://*.mcdvoice.com/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "icons": { 
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
   "128": "icons/icon128.png"
  }
}
